{
  "$schema": "https://biomejs.dev/schemas/2.3.12/schema.json",
  "json": {
    "parser": {
      "allowTrailingCommas": true
    }
  },
  "css": {
    "parser": {
      "cssModules": true,
      "tailwindDirectives": true
    },
    "linter": {
      "enabled": true
    },
    "formatter": {
      "enabled": true
    }
  },
  "formatter": {
    "indentStyle": "tab"
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/.next",
      "!**/out",
      "!**/build",
      "!**/next-env.d.ts",
      "!**/node_modules"
    ]
  }
}
